# Makefile for es with organized directory structure
# Based on original Makefile ($Revision: 1.4 $)

prefix          = @prefix@
datarootdir     = @datarootdir@
datadir         = @datadir@
exec_prefix     = @exec_prefix@
mandir          = @mandir@
bindir          = @bindir@
srcdir          = @srcdir@
testdir         = @srcdir@/test

VPATH           = $(srcdir)

SHELL           = /bin/sh
CC              = @CC@
YACC            = @YACC@
INSTALL         = @INSTALL@
INSTALL_PROGRAM = $(INSTALL)
INSTALL_DATA    = $(INSTALL) -m 644
MKDIR_P         = @MKDIR_P@

# Include paths for new structure
CFLAGS          = @STRICT_CFLAGS@ -I. -I$(srcdir) -Iinclude -I$(srcdir)/include -Igenerated \
                  -W -Wall @READLINE_CFLAGS@ @CFLAGS@ $(ADDCFLAGS)
LDFLAGS         = @LDFLAGS@ $(ADDLDFLAGS)
LIBS            = @READLINE_LIBS@ @LIBS@ $(ADDLIBS)

# Header files (now in include/)
HFILES          = include/config.h include/es.h include/gc.h include/input.h \
                  include/prim.h include/print.h include/sigmsgs.h \
                  include/stdenv.h include/syntax.h include/syntax-infix.h \
                  include/debug.h include/token-utils.h include/token-redir.h \
                  include/token-string.h

# Source files by category
CORE_CFILES     = src/core/eval.c src/core/gc.c src/core/main.c
PRIMITIVE_CFILES = src/primitives/prim.c src/primitives/prim-ctl.c     \
                  src/primitives/prim-etc.c src/primitives/prim-io.c   \
                  src/primitives/prim-math.c src/primitives/prim-sys.c \
                  src/primitives/prim-dict.c
PARSER_CFILES   = src/parser/syntax.c src/parser/syntax-infix.c src/parser/token.c \
                  src/parser/token-utils.c src/parser/token-redir.c src/parser/token-string.c
IO_CFILES       = src/io/input.c src/io/heredoc.c src/io/fd.c src/io/open.c \
                  src/io/proc.c src/io/term.c
DATA_CFILES     = src/data/str.c src/data/list.c src/data/split.c \
                  src/data/glom.c src/data/conv.c src/data/dict.c \
                  src/data/tree.c src/data/vec.c
UTILS_CFILES    = src/utils/debug.c src/utils/print.c src/utils/match.c \
                  src/utils/glob.c src/utils/util.c src/utils/var.c
SYSTEM_CFILES   = src/system/access.c src/system/signal.c src/system/status.c \
                  src/system/history.c src/system/opt.c src/system/except.c   \
                  src/system/closure.c src/system/error.c
BUILD_CFILES    = src/build/dump.c src/build/version.c

# All source files
CFILES          = $(CORE_CFILES) $(PRIMITIVE_CFILES) $(PARSER_CFILES) \
                  $(IO_CFILES) $(DATA_CFILES) $(UTILS_CFILES)         \
                  $(SYSTEM_CFILES) $(BUILD_CFILES) generated/y.tab.c generated/sigmsgs.c

# Object files (remove y.tab.c and sigmsgs.c, add y.tab.o and sigmsgs.o separately)
MAIN_CFILES     = $(CORE_CFILES) $(PRIMITIVE_CFILES) $(PARSER_CFILES) \
                  $(IO_CFILES) $(DATA_CFILES) $(UTILS_CFILES) $(SYSTEM_CFILES)
OFILES          = $(MAIN_CFILES:.c=.o) generated/y.tab.o generated/sigmsgs.o src/build/version.o

# Generated files
GEN             = esdump generated/y.tab.c   \
                         generated/y.tab.h   \
						 generated/y.output  \
						 generated/token.h   \
						 generated/sigmsgs.c \
						 generated/initial.c

SIGFILES        = @SIGFILES@

# Default target
all: es

# Directory creation rules
build:
	mkdir -p build

generated:
	mkdir -p generated

es              : $(OFILES) generated/initial.o
	$(CC) -o es $(LDFLAGS) $(OFILES) generated/initial.o $(LIBS)

esdump          : $(OFILES) src/build/dump.o
	$(CC) -o esdump $(LDFLAGS) $(OFILES) src/build/dump.o $(LIBS)

clean           :
	rm -f es $(OFILES) $(GEN) src/build/dump.o generated/initial.o
	find src -name "*.o" -delete
	find generated -name "*.o" -delete 2>/dev/null || true

distclean       : clean testclean
	rm -f config.cache config.log include/config.h Makefile cscope.out tags TAGS core cs.out config.status ltmain.sh
	rm -f build/config.status build/config.log build-aux/aclocal.m4
	rm -rf autom4te.cache build-aux/autom4te.cache

MANIFEST        :
	find . -type f | sed s/..// > MANIFEST

install         : es
	$(MKDIR_P) $(DESTDIR)$(bindir)
	$(INSTALL_PROGRAM) -s es $(DESTDIR)$(bindir)
	$(MKDIR_P) $(DESTDIR)$(mandir)/man1
	$(INSTALL_DATA) $(srcdir)/doc/es.1 $(DESTDIR)$(mandir)/man1
	$(MKDIR_P) $(DESTDIR)$(datadir)/es
	$(INSTALL_DATA) $(srcdir)/share/* $(DESTDIR)$(datadir)/es

build/testrun   : $(testdir)/testrun.c | build
	$(CC) -o build/testrun $(testdir)/testrun.c

test            : es build/testrun $(testdir)/test.es
	./es -ps < $(testdir)/test.es $(testdir)/tests/*

testclean       :
	rm -f build/testrun

src             :
	@echo parse.y $(CFILES) $(HFILES)

generated/y.tab.h         : src/parser/parse.y | generated
	$(YACC) -vd $(srcdir)/src/parser/parse.y
	mv y.tab.h y.tab.c generated/
	mv y.output generated/ 2>/dev/null || true

generated/y.tab.c         : generated/y.tab.h

generated/token.h         : generated/y.tab.h
	-cmp -s generated/y.tab.h generated/token.h || cp generated/y.tab.h generated/token.h

generated/initial.c       : esdump $(srcdir)/initial.es
	./esdump < $(srcdir)/initial.es > generated/initial.c

generated/sigmsgs.c       : mksignal $(SIGFILES)
	sh $(srcdir)/mksignal $(SIGFILES) > generated/sigmsgs.c

include/config.h : include/config.h.in
	./configure

# Update dependencies for new structure
